.app-loading:after
  border-width 0 5px 0 0
  border-style solid
  border-color rgba(0, 0, 0, .5)
  border-radius 50%
  display block
  height 100px
  left 50%
  margin -25px 0 0 -25px
  position absolute
  top 50%
  width 100px
  content ""
  animation spin 1s infinite linear

@keyframes spin
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)

// pour les icones qui veulent être retournées
.fh-toggle-icon
  transition all .3s cubic-bezier(0.25, 0.8, 0.5, 1) !important

  &--reverse
    transform rotate(-180deg)

// .fill-height de vuetify ne contient pas de !important
.fh-fill-height
  height 100% !important

.fh-multiline
  width 400px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.fh-multiline:hover
  white-space pre-wrap
  word-break break-word
  overflow visible
